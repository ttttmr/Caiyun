{
"update_url": "https://clients2.google.com/service/update2/crx",

    "default_locale": "en",
    "name": "__MSG_appName__",
    "short_name": "__MSG_appNameAbbr__",
    "version": "1.2.7",
    "manifest_version": 2,
    "description": "__MSG_appDesc__",
    "homepage_url": "https://fanyi.caiyunapp.com",
    "icons": { 
        "16": "images/logo.png",
        "128": "images/logo.png"
    },
    "options_page": "options.html",
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'; connect-src 'self' https://www.google-analytics.com https://caiyunapp.com/ https://*.caiyunapp.com/ https://api.interpreter.caiyunai.com/ ws://api.interpreter.caiyunai.com/ http://sentry.in.caiyunapp.com/; frame-src 'self' https://caiyunapp.com/",
    "background": {
        "scripts": [
            "bkg.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "LingoCloud",
        "default_icon": "images/logo.png"
    },
    "permissions": [
        "activeTab",
        "cookies",
        "storage",
        "tabs",
        "tabCapture",
        "webNavigation",
        "<all_urls>",
        "*://*.caiyunapp.com/*",
        "*://*.caiyunai.com/*",
        "contextMenus"
    ],
    "optional_permissions": [
        
    ],
    "web_accessible_resources": [
        "images/*",
        "css/*",
        "options.html",
        "options.js"
    ]
}
